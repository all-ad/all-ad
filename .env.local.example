# Environment Variables Example for All-Ad Platform

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenTelemetry Configuration
# For local development, you can use Jaeger or other OTLP collectors
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_API_KEY=your_otel_api_key
NEXT_OTEL_VERBOSE=1

# Logging Configuration
LOG_LEVEL=debug
# Optional: External logging endpoint
# LOG_ENDPOINT=https://your-logging-service.com/api/logs

# Service Information
SERVICE_VERSION=1.0.0

# Ad Platform APIs (Examples)
# Google Ads
GOOGLE_ADS_API_KEY=your_google_ads_api_key
GOOGLE_ADS_CUSTOMER_ID=your_google_ads_customer_id

# Facebook Ads
FACEBOOK_ADS_ACCESS_TOKEN=your_facebook_ads_access_token
FACEBOOK_ADS_ACCOUNT_ID=your_facebook_ads_account_id

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
